<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".StatisticsActivityEmployer">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:background="@drawable/button_stop"
        android:text="@string/back"
        android:textColor="#BF360C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-126dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="kupybik "
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/dayTextView1"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/statistics_design"
            android:gravity="center"
            android:text="This period: "
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/weekTextView1"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/statistics_design"
            android:gravity="center"
            android:text="This period: "
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/monthTextView1"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/statistics_design"
            android:gravity="center"
            android:text="This period: "
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/yearTextView1"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/statistics_design"
            android:gravity="center"
            android:text="This period: "
            android:textColor="@color/white"
            android:textSize="25sp" />






    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>